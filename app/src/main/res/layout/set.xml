<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg3"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="我要出题"
        android:textSize="30sp"
        android:textColor="#000000"
        android:drawableLeft="@mipmap/set"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="请输入您要出的题目"
        android:textSize="14sp"
        android:textColor="#000000"
        />

    <EditText
        android:id="@+id/myTitle_ET"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:enabled="true"
        android:maxLines="3"
        android:text="祝你一路顺风这首歌是谁唱的？"
        android:scrollbars="vertical"
        android:gravity="top"
        android:hint="请输入题目"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="left"
        android:text="请输入A选项"
        android:textSize="14sp"
        android:textColor="#000000"
        />

    <EditText
        android:id="@+id/myOptionA_ET"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:enabled="true"
        android:maxLines="3"
        android:text="吴奇隆"
        android:scrollbars="vertical"
        android:gravity="top"
        android:hint="请输入A选项"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="请输入B选项"
        android:textSize="14sp"
        android:textColor="#000000"
        />

    <EditText
        android:id="@+id/myOptionB_ET"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:enabled="true"
        android:maxLines="3"
        android:scrollbars="vertical"
        android:gravity="top"
        android:text="邓丽君"
        android:hint="请输入B选项"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="请输入C选项"
        android:textSize="14sp"
        android:textColor="#000000"
        />

    <EditText
        android:id="@+id/myOptionC_ET"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:enabled="true"
        android:maxLines="3"
        android:scrollbars="vertical"
        android:gravity="top"
        android:text="庄心研"
        android:hint="请输入C选项"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="请输入D选项"
        android:textSize="14sp"
        android:textColor="#000000"
        />

    <EditText
        android:id="@+id/myOptionD_ET"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:enabled="true"
        android:maxLines="3"
        android:scrollbars="vertical"
        android:text="刘亦菲"
        android:gravity="top"
        android:hint="请输入D选项"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="left"
        android:text="请选择正确选项"
        android:textSize="14sp"
        android:textColor="#000000"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button
            android:id="@+id/A_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            />

        <Button
            android:id="@+id/B_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B"
            />

        <Button
            android:id="@+id/C_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            />

        <Button
            android:id="@+id/D_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D"
            />

    </LinearLayout>

</LinearLayout>